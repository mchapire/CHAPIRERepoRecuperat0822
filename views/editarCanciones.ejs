<!DOCTYPE html>
<html>
  <head>
    <title>Editar canciones</title>
    <link rel='stylesheet' href='../stylesheets/style.css' />
  </head>
  <%- include('./partials/header', {title: 'Editar'}) %>
  <body>
    <main>
    <h1><%= canciones.titulo %></h1>
    <div>
      <form action="/canciones/editar/<%=canciones.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div>
          <label for="">Titulo</label>
          <input type="text" name="titulo" value="<%= canciones.titulo%>">
        </div>
        <div>
          <label for="">Duracion</label>
          <input type="text" name="duracion" value="<%= canciones.duracion%>">
        </div>
        <div>
          <label for="">Genero</label>
          <select name="genero">
            <% for (let i = 0; i < generos.length; i++) { %>
              <% if (generos[i].id == canciones.genero_id) { %>
                      <option value="<%generos[i].id%>" selected>
                        <%=generos[i].name%>
                      </option>
                <% } else { %>
                  <option value="<%generos[i].id%>">
                    <%=generos[i].name%>
                  </option>
                <% } %>
            <% } %>
          </select>
        </div>
        <div>
          <label for="">Album</label>
          <input type="text" name="album" value="<%= canciones.albumes.nombre%>">
        </div>
        <div>
          <label for="">Artista</label>
          Nombre:
          <input type="text" name="artista" value="<%= canciones.artistas.nombre%>">
        </div>
        <div>
          <label for="">Artista</label>
          Apellido:
          <input type="text" name="artista" value="<%= canciones.artistas.apellido%>">
        </div>
        <div>
          <button type="submit">Editar</button>
        </div>
      </form>
        <div>
          <button type="button" onclick="location.href='/'">Inicio</button>
        </div>
    </div>
  </main>
  <%- include('./partials/footer') %>  
</body>
</html>