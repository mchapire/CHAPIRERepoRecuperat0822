<!DOCTYPE html>
<html>
  <head>
    <title>Crear canciones</title>
    <link rel='stylesheet' href='../stylesheets/style.css' />
  </head>
  <body>
      <%- include('./partials/header', {title: 'Crear'}) %>
    <main>
    <div class="div-formulario-crear">
      <form action="/canciones/crear" method="POST" class="formulario-crear">
          <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo">
        </div>
        <div>
            <label for="">Duracion</label>
            <input type="text" name="duracion">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero">
                <% for (let i = 0; i < generos.length; i++) { %>
                    <option value="<%=generos[i].id%>">
                        <%=generos[i].name%>
                    </option>
                    <% } %>
                </select>
            </div>
            <div>
                <label for="">Creaci√≥n</label>
                <input type="date" name="creacion">
            </div>
            <div>
                <label for="">Lanzamiento</label>
                <input type="date" name="lanzamiento">
            </div>
            <div>
                <label for="">Album</label>
                <select name="albumes">
                    <% for (let i = 0; i < albumes.length; i++) { %>
                        <option value="<%=generos[i].id%>">
                            <%=albumes[i].nombre%>
                        </option>
                        <% } %>
                    </select>
                </div>
                    <div>
                        <label for="">Artista</label>
                <select name="artistas">
                    <% for (let i = 0; i < artistas.length; i++) { %>
                        <option value="<%=artistas[i].id%>">
                            <%=artistas[i].apellido%>, <%=artistas[i].nombre%>
                        </option>
                        <% } %>
                    </select>
                    </div>
            <div class="boton-crear">
                <button type="submit" >Crear</button>
            </div>
            <div>
                <button type="button" onclick="location.href='/'">Inicio</button>
            </div>
        </form>
        </div>
    </main>
    <%- include('./partials/footer') %>    
</body>
    </html>