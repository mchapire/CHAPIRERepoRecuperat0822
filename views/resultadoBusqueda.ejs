<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel='stylesheet' href='../stylesheets/style.css' />
      </head>
<body>
    <%- include('./partials/header', {title: 'Busqueda'}) %>
    <div class="nuevo-banner"></div>
    <main>
        <div class="barra-navegacion">
            <ol class="lista-producto">
                <li class="barra-van">
                    <a class="item-class">Resultados de la búsqueda: <%=search%></a>
                </li>
            </ol>
        </div>
        <div class="search" id="search">
            <form action="/products/search" method="GET">
                <input type="search" placeholder="  Buscar productos" name="keywords">
                    <button type="submit" class="cursor-boton" id="botonBuscar" ><ion-icon name="search-outline"></ion-icon></button>                 
            </form>
        </div>
        <section class="sectionBusqueda">
            <div class="busqueda">
                <% if (cancionesSearch.length > 0) {
                    cancionesSearch.forEach(cancion => {  %>
                    <div class="description">
                        <p class="titulo">$ <%= cancion.titulo %></p>
                        <p class="album"><%= cancion.id_album %>  </p>   
                        <p class="artista"><%= cancion.id_artista %></p> 
                    </div>
                <% })} else { %>
                    <div class="barra-navegacion">
                        <h2 class="title-result">No hay productos que coincidan con esa búsqueda</h2>
                    </div>
                    <% } %>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>